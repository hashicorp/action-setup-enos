{
  "name": "action-setup-enos",
  "version": "1.29",
  "description": "Setup Enos CLI for GitHub Actions",
  "main": "action.js",
  "scripts": {
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint . -c eslintrc.yml",
    "prepare": "npx ncc build src/index.js -o dist --source-map --license licenses.txt",
    "test": "npx jest",
    "all": "npm run lint && npm run prepare && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hashicorp/action-setup-enos.git"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript",
    "Enos"
  ],
  "author": "HashiCorp",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/hashicorp/action-setup-enos/issues"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "homepage": "https://github.com/hashicorp/action-setup-enos#readme",
  "eslintConfig": {
    "extends": "./eslintrc.yml"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/tool-cache": "^1.7.2",
    "@octokit/auth-unauthenticated": "^5.0.1",
    "@octokit/core": "^5.2.0",
    "@octokit/plugin-retry": "^6.0.1",
    "@octokit/plugin-throttling": "^8.2.0",
    "got": "^11.8.3"
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/eslint-parser": "^7.24.1",
    "@octokit/rest": "^18.12.0",
    "@vercel/ncc": "^0.33.4",
    "babel-preset-jest": "^29.6.3",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^4.10.2",
    "eslint-plugin-jest": "^28.2.0",
    "globals": "^15.0.0",
    "jest": "^29.7.0",
    "nock": "^13.2.4",
    "prettier": "^3.2.5"
  }
}
